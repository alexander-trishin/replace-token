{
    "name": "replace-token",
    "private": true,
    "version": "1.0.0",
    "description": "GitHub action for replacing tokens in a file",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/alexander-trishin/replace-token.git"
    },
    "keywords": [
        "github",
        "actions",
        "replace",
        "token",
        "interpolation",
        "substitution"
    ],
    "exports": {
        ".": "./dist/index.js"
    },
    "author": "Alexander Trishin",
    "license": "MIT",
    "homepage": "https://github.com/alexander-trishin/replace-token#readme",
    "bugs": {
        "url": "https://github.com/alexander-trishin/replace-token/issues"
    },
    "engines": {
        "node": ">=20"
    },
    "scripts": {
        "prepare": "npx husky",
        "format:check": "npx prettier --check .",
        "format:write": "npx prettier --write .",
        "package": "npx ncc build src/index.ts -o dist --source-map --license licenses.txt",
        "package:watch": "npm run package -- --watch",
        "typecheck": "npx tsc --noEmit",
        "lint": "npx eslint .",
        "lint:fix": "npm run lint -- --fix",
        "test": "npx jest",
        "coverage": "npx make-coverage-badge --output-path ./.github/badges/coverage.svg",
        "bundle": "npm run typecheck && npm run lint:fix && npm run format:write && npm run test && npm run coverage && npm run package"
    },
    "dependencies": {
        "@actions/core": "^1.10.1",
        "@actions/glob": "^0.4.0",
        "chardet": "^2.0.0"
    },
    "devDependencies": {
        "@jest/globals": "29.7.0",
        "@types/jest": "29.5.12",
        "@types/node": "20.12.7",
        "@typescript-eslint/eslint-plugin": "7.7.0",
        "@typescript-eslint/parser": "7.7.0",
        "@vercel/ncc": "0.38.1",
        "eslint": "8.56.0",
        "eslint-plugin-github": "4.10.2",
        "eslint-plugin-jest": "28.3.0",
        "eslint-plugin-jsonc": "2.15.1",
        "eslint-plugin-prettier": "5.1.3",
        "husky": "9.0.11",
        "jest": "29.7.0",
        "make-coverage-badge": "1.2.0",
        "prettier": "3.2.5",
        "prettier-eslint": "16.3.0",
        "ts-jest": "29.1.2",
        "typescript": "5.4.5"
    }
}
